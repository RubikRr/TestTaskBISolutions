@model ToDo

<div class="row">
	<form method="post">
		<div class="col-6 card" style="margin-left:auto; margin-right:auto">
			<div class="card-header">
				<h5>Enter case data</h5>
			</div>
			<div class="card-body">
				<input type="text" asp-for="Content" class="form-control" placeholder="Content">
			</div>
			<div class="card-footer">
				<button type="submit" class="btn btn-success" style="150px" asp-controller="ToDoList" asp-action="Add">
					Add
				</button>
			</div>
		</div>
	</form>
</div>
