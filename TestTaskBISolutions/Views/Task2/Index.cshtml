@model bool

<div class="row">

    <form asp-controller="Task2" asp-action="Index">
        <div class="col-12">
            <h2>Введите строку</h2>
        </div>
        <div class="col-4 mb-1">
            <input type="text" name="str" class="input-group"></input>
        </div>
        <div class="col-4">
            <button type="submit" class="btn btn-success">Проверить</button>
        </div>

        <div class="col-4">
            @if (ViewBag.Str != null)
            {
                <h2>@(Model ? $"{ViewBag.Str} является полиндромом" : $"{ViewBag.Str} не является полиндромом")</h2>
            }
        </div>
    </form>
   

</div>
